extends layout.pug 

include utils.pug 

block content
    form(action='/user/register', method='POST')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('First Name', 'firstName', user.firstName)
        +field('Last Name', 'lastName', user.lastName)
        +field('Email Address', 'emailAddress', user.emailAddress)
        +field('Password', 'password', user.password)
        +field('Confirm Password', 'confirmPassword', user.confirmPassword)
        input(type='submit', value='Submit')